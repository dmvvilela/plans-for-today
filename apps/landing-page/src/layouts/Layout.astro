---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Plans For Today - A simple, beautiful whiteboard app for daily planning. No complexity, just pure focus." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/icon.png" />
		<link rel="apple-touch-icon" href="/icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<style>
			:root {
				--yellow: #F5C542;
				--orange: #E47428;
				--green: #4CA64C;
				--dark-green: #2D6B2D;
				--blue-border: #397C92;
				--dark-blue: #1D3C47;
				--marker-blue: #4077A5;
				--whiteboard: #F8F6ED;
				--speckle: #A9B7C5;
				--black: #202020;
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@import '../styles/global.css';

	html {
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		font-family: 'Inter', system-ui, sans-serif;
		background: var(--whiteboard);
		color: var(--black);
		overflow-x: hidden;
	}

	* {
		box-sizing: border-box;
	}

	.handwritten {
		font-family: 'Caveat', cursive;
	}
</style>