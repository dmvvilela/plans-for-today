---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Plans For Today - A simple, beautiful whiteboard app for daily planning. No complexity, just pure focus."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/icon.png" />
    <link rel="apple-touch-icon" href="/icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;600;700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --yellow: #f5c542;
        --orange: #e47428;
        --green: #4ca64c;
        --dark-green: #2d6b2d;
        --blue-border: #397c92;
        --dark-blue: #1d3c47;
        --marker-blue: #4077a5;
        --whiteboard: #f8f6ed;
        --speckle: #a9b7c5;
        --black: #202020;
      }
    </style>
    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "teu3mwehk4");
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: "Inter", system-ui, sans-serif;
    background: var(--whiteboard);
    color: var(--black);
    overflow-x: hidden;
  }

  * {
    box-sizing: border-box;
  }

  .handwritten {
    font-family: "Caveat", cursive;
  }
</style>
